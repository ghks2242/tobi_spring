<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">



    <!--
    @Bean
    public UserDaoData userDao() {
        UserDaoData userDao = new UserDaoData();
        userDao.setDataSource(dataSource());
        return userDao;
    }
    -->
    <!-- class 는 리턴타입을 명시 -->
    <bean id="userDao" class="com.example.demo.study.datasource.UserDaoData">
        <property name="dataSource" ref="dataSource"/>
    </bean>


    <!--
    @Bean
    public DataSource dataSource() {
        SimpleDriverDataSource dataSource = new SimpleDriverDataSource();
        dataSource.setDriverClass(org.h2.Driver.class);
        dataSource.setUrl("jdbc:h2:tcp://localhost/~/tobi");
        dataSource.setUsername("sa");
        dataSource.setPassword("");
        return dataSource;
    }
    -->
    <bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
        <!--
        값을 넣을떄는 value 로 넣으면된다.
        -->
        <property name="driverClass" value="org.h2.Driver"/>
        <property name="url" value="jdbc:h2:tcp://localhost/~/tobitest"/>
        <property name="username" value="sa"/>
        <property name="password" value=""/>

        <!--
            한가지 이상한점이있다. url, username, password 는 전부다 String 타입이니 value="" 로 스트링타입으로 넣어도 문제가없다
            그러나 driverClass 는 스트링타입이 아니라 Class 타입이다 어떻게 클래스타입을 스트링 타입으로 사용할수있을까?
            -> 이유는 스프링이 프로퍼티 값을 수정자 메소드의 파라미터 타입을 참고해서 적절한 형태로 변환해주기때문이다
        -->
    </bean>

</beans>